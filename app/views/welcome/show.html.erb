<div id="recipes">
<h1>Recipes</h1>
<%= link_to 'Add New Recipe', new_recipe_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Difficulty</th>
      <th>Prep time</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %> <%= link_to 'More Info', recipe%></td>
        <td><%= recipe.difficulty %></td>
        <td><%= recipe.prep_time %> minutes</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>

