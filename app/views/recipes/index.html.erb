<p id="notice"><%= notice %></p>
<div id="recipes">
<h3 class="text-text">Recipe Database</h3>
<!-- <h6><%= link_to 'Add New Recipe', new_recipe_path %><h6> -->
<br />
<div id="search-box">
  <%= form_tag('/recipes', method: "get") do %>
    <%= label_tag(:ingredient, "Search by ingredient:") %>
    <%= text_field_tag(:ingredient) %>
    <button class="btn waves-effect teal darken-4"><%= submit_tag("Search") %></button>
  <%end%>
</div>
<br />

<div id="search-box-name">
  <%= form_tag('/recipes', method: "get") do %>
    <%= label_tag(:name, "Search by recipe name:") %>
    <%= text_field_tag(:name) %>
    <button class="btn waves-effect teal darken-4"><%= submit_tag("Search") %></button>
  <%end%>
</div>
<br />

<% if @recipes.blank? && params[:ingredient] %>
  <p>There are no recipes with <%= params[:ingredient]%>. </p>
<%elsif @recipes.blank? && params[:name] %>
<p>There are no recipes named <%= params[:name]%>. </p>
<%else%>
<table>
  <thead>
    <tr class="collection with-header">
      <th class="collection-header">Name</th>
      <th class="collection-header">Submitted By</th>
      <th class="collection-header">Difficulty</th>
      <th class="collection-header">Prep time</th>
      <th class="collection-header">Average Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>


    <% @recipes.each do |recipe| %>
      <tr class="collection">
        <td class="collection-item"><%= recipe.name %> <%= link_to 'More info', recipe%></td>
        <td class="collection-item"><%= recipe.user.email%></td>
        <td class="collection-item"><%= recipe.difficulty %></td>
        <td class="collection-item"><%= recipe.prep_time %> minutes</td>
        <% sum = 0 %>
        <% recipe.ratings.each do |rating| %>
          <% sum += rating.score %>
        <% end %>
        <% if recipe.ratings.empty? %>
        <td class="collection-item">Unrated</td>
        <% else %>
        <td class="collection-item"><%= sum / recipe.ratings.length %><td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>
</div>
